<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="default">
        <job name="porterbuddy_send_shipments" instance="Porterbuddy\Porterbuddy\Cron\SendShipments" method="execute">
            <schedule>* * * * *</schedule>
        </job>
        <job name="porterbuddy_update_postcodes" instance="Porterbuddy\Porterbuddy\Cron\UpdatePostcodes" method="execute">
            <schedule>0 4 * * *</schedule>
        </job>
    </group>
</config>
